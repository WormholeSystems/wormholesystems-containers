# =============================================================================
# WORMHOLE SYSTEMS - DOCKER ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and adjust the values according to your setup
# =============================================================================

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Main application domain (without protocol)
APP_DOMAIN=localhost

# WebSocket domain (for Laravel Reverb)
WS_DOMAIN=ws.localhost

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
# HTTP port (usually 80)
HTTP_PORT=80

# HTTPS port (usually 443)
HTTPS_PORT=443

# Traefik dashboard port (usually 8080)
TRAEFIK_DASHBOARD_PORT=8080

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# Certificate mode: 'manual' for custom certificates, 'acme' for Let's Encrypt
CERT_MODE=manual

# Manual certificate configuration (used when CERT_MODE=manual)
SSL_CERT_FILE=traefik/localhost+1.pem
SSL_KEY_FILE=traefik/localhost+1-key.pem

# ACME/Let's Encrypt configuration (used when CERT_MODE=acme)
ACME_EMAIL=your-email@example.com
ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory

# ACME Challenge type: 'http' or 'dns'
ACME_CHALLENGE=http

# DNS provider for DNS challenge (if ACME_CHALLENGE=dns)
ACME_DNS_PROVIDER=your-dns-provider

# =============================================================================
# TRAEFIK CONFIGURATION
# =============================================================================
# Enable Traefik API/Dashboard (true/false)
TRAEFIK_API_INSECURE=true

# Skip SSL verification for backends (true/false)
TRAEFIK_INSECURE_SKIP_VERIFY=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Laravel Reverb WebSocket server configuration
REVERB_HOST=0.0.0.0
REVERB_PORT=8080
REVERB_DEBUG=true

# =============================================================================
# DEVELOPMENT/PRODUCTION SETTINGS
# =============================================================================
# Set to 'false' in production to disable automatic HTTPS redirect
FORCE_HTTPS_REDIRECT=true

# Set to 'false' in production for better security
TRAEFIK_EXPOSE_BY_DEFAULT=false

# Docker restart policy (no, always, on-failure, unless-stopped)
RESTART_POLICY=always
